<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="text-center">尋找您的完美餐廳</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-5">
  <div class="add position-fixed">
    <a class="nav-link" href="/new"><span class="h1 text-danger" style="text-shadow: -4px 5px 2px rgba(150, 150, 150, 1);"><i class="fas fa-plus-circle"></i></span></a>
  </div>
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
            <div class="card mb-3 cardField">
              <div class="edit position-absolute">
                <a href="/edit/{{this.id}}"><span class="h4 text-warning"><i class="far fa-edit"></i></span></a>
              </div>
              <div class="card-body p-2">
                <a href="/restaurants/{{this.id}}" class="text-secondary text-decoration-none">
                  <img class="card-img-top" src="{{{this.image}}}" alt="{{{this.name}}}">
                  <h6 class="card-title mb-1">{{{this.name}}}</h6>

                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i> {{{this.category}}}
                  </div> 
                    <span class="badge badge-pill badge-danger font-weight-normal">
                      {{this.rating}}
                      <i class="fas fa-star fa-xs"></i>
                    </span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                </a> 
                <span class="ml-5"><i class="far fa-heart"></i></span>
                <a href="/delete/{{this.id}}"><span class="ml-2 text-secondary"><i class="fas fa-trash"></i></span></a>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
